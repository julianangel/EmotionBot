#!/bin/bash

echo "odroid" | sudo chmod 777 /dev/ttyACM0
echo "odroid" | sudo ifdown wlan1
sleep 30
echo "odroid" | sudo ifup wlan1
while true ; do
   if ifconfig wlan1 | grep -q "inet addr:" ; then
      sleep 60
   else
      echo "Network connection down! Attempting reconnection."
      ifup --force wlan1
      sleep 10
   fi
done

